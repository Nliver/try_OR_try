var (
	normalSize float64
)

onStart => {
	normalSize = 1.0
	setSize normalSize
}

// 监听"开始"按钮的点击事件
onClick => {
	// 点击时缩小
	setSize 0.9
	wait 0.1

	// 恢复大小
	setSize normalSize
	wait 0.05

	// 隐藏自己
	hide

	// 通知游戏开始
	broadcast "gameStart"
}

// 监听游戏结束消息
onMsg "gameOver", => {
	// 显示 Game Over
	setCostume "默认"
	setXYpos 0, 0
	setSize 1.2
	show
}
